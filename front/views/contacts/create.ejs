<%- include('../partials/header') %>

<h1><%= locals.contact ? 'Modifier' : 'Créer' %> un contact</h1>

<form action="/new" method="post">

    <label for="firstname">Prénom</label>
    <input type="text" name="firstname" id="firstname" required="required"
        value="<%= locals.contact ? contact.firstname : '' %>">
    <br>

    <label for="lastname">Nom</label>
    <input type="text" name="lastname" id="lastname" required="required"
        value="<%= locals.contact ? contact.lastname : '' %>">
    <br>

    <label for="email">Email</label>
    <input type="text" name="email" id="email" required="required" value="<%= locals.contact ? contact.email : '' %>">
    <br>

    <label for="phone_number">Numéro de téléphone</label>
    <input type="text" name="phone_number" id="phone_number" value="<%= locals.contact ? contact.phone_number : '' %>">
    <br>
    <br>

    <button type="submit"><%= locals.contact ? 'Modifier' : 'Créer' %></button>

</form>

<%- include('../partials/footer') %>